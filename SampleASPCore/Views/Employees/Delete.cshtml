@model SampleASPCore.ViewModels.EditEmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header text-danger">
                [Alert] Konfirmasi delete Employee ?
            </div>
            <div class="card-body">
                <form asp-action="Delete">
                    <input type="hidden" name="id" value="@Model.EmployeeID" />
                    <div class="form-group">
                        <label for="FullName" class="control-label">FullName :</label>
                        <input asp-for="FullName" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label for="Email" class="control-label">Email :</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-warning" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>