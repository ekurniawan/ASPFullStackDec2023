@model MVCAppWithIdentity.ViewModels.RoleCreateViewModel

@{
    ViewData["Title"] = "AddRole";
}
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="AddRole">
                <h3>Add Role</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="RoleName" class="form-control" aria-required="true" />
                    <label asp-for="RoleName" class="form-label"></label>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}