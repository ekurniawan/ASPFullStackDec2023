@model MVCAppWithIdentity.ViewModels.AsignRoleViewModel

@{
    ViewData["Title"] = "AssignRole";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRole">
            <h2>Register User To Role</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" aria-required="true" />
                <label asp-for="Username"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="RoleName" class="form-control" aria-required="true" />
                <label asp-for="RoleName"></label>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}